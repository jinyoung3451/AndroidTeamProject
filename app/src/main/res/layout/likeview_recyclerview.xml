<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#F6F0F0"
    style="@style/font_style">

    <!-- 마이페이지 -> 좋아요 -> 찜한 가게 정보 리스트    -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/likestorereview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="맛집 가게명"
            android:textSize="15dp"
            style="@style/font_style2"/>

        <TextView
            android:id="@+id/likeAddress"
            style="@style/font_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/likestorereview"
            android:layout_margin="2dp"
            android:hint="주소 입력창 " />
        <TextView
            android:id="@+id/likeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/likeAddress"
            android:hint="영업시간"
            android:layout_margin="2dp"
            style="@style/font_style" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>

