<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginMainActivity"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/loginMainText"
        android:src="@drawable/login"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@+id/LoginBtn"
        style="?attr/borderlessButtonStyle"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/loginMainText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#14C1BDBD"
        android:fontFamily="@font/gsansmedium"
        android:text="로그인"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/FindPassBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@id/LoginBtn"
        android:layout_below="@+id/LoginBtn"
        android:fontFamily="@font/gsansmedium"
        android:text="비밀번호를 잊으셨나요?    |"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        style="?attr/borderlessButtonStyle" />




    <Button
        android:id="@+id/JoinBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignEnd="@id/LoginBtn"
        android:layout_below="@id/LoginBtn"
        android:fontFamily="@font/gsansmedium"
        android:text="회원가입"
        android:textColor="#000000"
        android:textSize="15dp"
        style="?attr/borderlessButtonStyle"/>


</RelativeLayout>