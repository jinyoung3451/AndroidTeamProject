<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">


    <ImageView
        android:id="@+id/userDetail_imageView"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/chevron"
        android:clickable="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="refdf"
            android:background="@drawable/rounded_edittext"
            app:backgroundTint="#DAA6A4A5"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            style="@style/font_style"/>

        <EditText
            android:id="@+id/tvName"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:textSize="18sp"
            android:layout_below="@+id/tvEmail"
            android:background="@drawable/rounded_edittext"
            app:backgroundTint="#86E4DADD"
            android:layout_margin="5dp"
            style="@style/font_style"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/tvTel"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:textSize="18sp"
            android:layout_below="@+id/tvName"
            android:background="@drawable/rounded_edittext"
            app:backgroundTint="#86E4DADD"
            android:layout_margin="5dp"
            style="@style/font_style"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/tvAdr"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:textSize="18sp"
            android:layout_below="@+id/tvTel"
            android:background="@drawable/rounded_edittext"
            app:backgroundTint="#86E4DADD"
            android:layout_margin="5dp"
            style="@style/font_style"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/tvAdr"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edittext2"
            app:backgroundTint="#F81B66"
            android:text="변경사항 저장"
            android:fontFamily="@font/gsansmedium"
            android:textSize="18dp"/>

    </RelativeLayout>

</LinearLayout>