<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">


    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            style="@style/font_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="MY PAGE"
            android:textSize="35sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:background="@drawable/line_background_gray"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/member_info"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_below="@id/toolbar"
            android:layout_margin="10dp"
            android:background="#63EDDDE3"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_imageview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/pw_search" />

            <TextView
                android:id="@+id/profile_textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:hint="Name"
                android:fontFamily="@font/gsansmedium"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/profile_textview_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Email"
                android:layout_margin="10dp"
                android:fontFamily="@font/gsansmedium"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/profile_textview_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Phone"
                android:layout_margin="10dp"
                android:fontFamily="@font/gsansmedium"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/profile_textview_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Address"
                android:layout_margin="10dp"
                android:fontFamily="@font/gsansmedium"
                android:textSize="20sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/box_background_blue"
        android:gravity="center"
        android:padding="5dp">

        <Button
            android:id="@+id/member_info_change"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:clickable="true"
            android:gravity="center"
            android:text="회원정보 수정"
            android:textSize="15dp"
            style="@style/font_style2" />

        <View
            android:layout_width="4px"
            android:layout_height="30dp"
            android:background="#7BCAED" />

        <Button
            android:id="@+id/delUser"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:clickable="true"
            android:gravity="center"
            android:textSize="15dp"
            android:text="회원탈퇴"
            style="@style/font_style2"
            />

        <View
            android:layout_width="4px"
            android:layout_height="30dp"
            android:background="#7BCAED" />

        <Button
            android:id="@+id/like_check"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            android:clickable="true"
            android:gravity="center"
            android:textSize="15dp"
            android:text="좋아요"
            style="@style/font_style2" />

    </LinearLayout>

</LinearLayout>
