<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/login_backBtn"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:backgroundTint="#00000000"
        android:contentDescription="@string/imageBtn"
        android:src="@drawable/chevron" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="10dp"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="#EC1F64"
            android:textStyle="bold"
            android:textSize="50sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 서비스 이용을 위해 로그인 해주세요."
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Email"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/user"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Password"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/locked"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:textSize="18sp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_Sign"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="15dp"
            android:text="Sign in"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:backgroundTint="#EC1F64"
            />
    </LinearLayout>

</LinearLayout>
